{
  "commands": [
    {
      "command": "wmacs.diagnose",
      "title": "WMACS: Run System Diagnostic",
      "category": "WMACS Guardian",
      "when": "workspaceFolder",
      "execution": {
        "command": "node",
        "args": ["wmacs/wmacs-guardian.js", "diagnose"]
      }
    },
    {
      "command": "wmacs.sync",
      "title": "WMACS: Sync with Shared System",
      "category": "WMACS Guardian", 
      "when": "workspaceFolder",
      "execution": {
        "workflow": "/wmacs-sync"
      }
    },
    {
      "command": "wmacs.test.staging",
      "title": "WMACS: Test Staging Environment (Container 134 (blue-theoshift))",
      "category": "WMACS Guardian",
      "when": "workspaceFolder", 
      "execution": {
        "command": "node",
        "args": ["wmacs/wmacs-guardian.js", "test", "134"]
      }
    },
    {
      "command": "wmacs.test.production",
      "title": "WMACS: Test Production Environment (Container 132 (green-theoshift))",
      "category": "WMACS Guardian",
      "when": "workspaceFolder", 
      "execution": {
        "command": "node",
        "args": ["wmacs/wmacs-guardian.js", "test", "132"]
      }
    },
    {
      "command": "wmacs.research",
      "title": "WMACS: Analyze Suggestion with Research Advisor",
      "category": "WMACS Guardian",
      "when": "editorHasSelection",
      "execution": {
        "command": "node",
        "args": ["wmacs/wmacs-research-advisor.js", "analyze", "${selectedText}"]
      }
    },
    {
      "command": "wmacs.deploy.staging",
      "title": "WMACS: Deploy to Staging (Container 134 (blue-theoshift))",
      "category": "WMACS Guardian",
      "when": "workspaceFolder",
      "execution": {
        "workflow": "/nextjs-cicd-pipeline"
      }
    },
    {
      "command": "wmacs.validate.cicd",
      "title": "WMACS: Validate CI/CD Compliance",
      "category": "WMACS Guardian",
      "when": "workspaceFolder",
      "execution": {
        "command": "node",
        "args": ["wmacs/wmacs-research-advisor.js", "validate", "cicd-compliance"]
      }
    }
  ],
  "keybindings": [
    {
      "command": "wmacs.diagnose",
      "key": "ctrl+shift+w d",
      "mac": "cmd+shift+w d"
    },
    {
      "command": "wmacs.research",
      "key": "ctrl+shift+w r",
      "mac": "cmd+shift+w r",
      "when": "editorHasSelection"
    },
    {
      "command": "wmacs.test.staging",
      "key": "ctrl+shift+w s",
      "mac": "cmd+shift+w s"
    }
  ]
}
